{
    "manifest_version": 3,
    "name": "Cookie Tracker",
    "version": "1.0",
    "description": "Tracks and stores cookies to monitor where they are being sent.",
    "permissions": ["cookies", "storage", "notifications", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_icon": "icon.png",
        "default_title": "CNAME Seeker",
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "icon.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}